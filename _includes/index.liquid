{% include head %}

<body>

  {% include header %}

  <div class="intro" style="background-image: url({{ thumbnail }})"></div>

  <div class="content">
    <div class="wrap">
      {{ content }}
      <a href="#" class="btn">Lees verder</a>
    </div>
  </div>

  <div class="content">

    {% for cat in categories %}

    <div class="cat">
      <h1>{{ cat.title }}</h1>
      <div class="img" style="background-image: url({{ cat.image }})">
        <div class="text">
          {{ cat.descripton }}
        </div>
      </div>

      <div class="items">

        {% for post in collections[cat.title]  %}

        <div class="item">
          <div class="img" style="background-image: url({{ post.data.thumbnail }})">
          </div>
          <div class="title">
            <h2>{{ post.data.title }}</h2>
          </div>
          <div class="excerpt">
            <p>{{ post.data.excerpt }}</p>
            <a href="{{ post.url }}" class="btn">Lees verder</a>
          </div>
        </div>

        {% endfor %}

      </div>

    </div>

    {% endfor %}

  </div>

  {% include footer %}

</body>

</html>
